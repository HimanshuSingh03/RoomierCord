<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/main.css">
    <title>RoomierCord - Home</title>
</head>

<body>
    <h1>
        Attributes
    </h1>
    <form action="/attributes" method="POST">

        <!-- Slider for age -->
        <div>
            <label for="age">Age</label>
            <div class="slidecontainer">
                <input type="range" id="slider4" name="age" minlength="1" maxlength="10" value="18" max="30" min="18"
                    class="slider" mousemove="range(this.value)" onChange="range(this.value)">
                <div id="selector4">
                    <div id="SelectValue4"></div>
                </div>
            </div>
        </div>

        <!-- Slider for Partying -->
        <div>
            <label for="partying">Partying</label>
            <div class="slidecontainer">
                <input type="range" id="slider" name="partying" minlength="1" maxlength="10" value="0" max="10"
                    class="slider" mousemove="range(this.value)" onChange="range(this.value)">
                <div id="selector">
                    <div id="SelectValue"></div>
                </div>
            </div>
        </div>

        <!-- Slider for Cleanliness -->
        <div>
            <label for="cleanliness">Cleanliness</label>
            <div class="slidecontainer">
                <input type="range" id="slider2" name="cleanliness" minlength="1" maxlength="10" value="0" max="10"
                    class="slider" mousemove="range(this.value)" onChange="range(this.value)">
                <div id="selector2">
                    <div id="SelectValue2"></div>
                </div>
            </div>
        </div>

        <!-- Slider for cooking -->
        <div>
            <label for="cooking">Cooking</label>
            <div class="slidecontainer">
                <input type="range" id="slider3" name="cooking" minlength="1" maxlength="10" value="0" max="10"
                    class="slider" mousemove="range(this.value)" onChange="range(this.value)">
                <div id="selector3">
                    <div id="SelectValue3"></div>
                </div>
            </div>
        </div>

        <!-- Slider for max distance -->
        <div>
            <label for="maxdistance">Max. Distance from School</label>
            <div class="slidecontainer">
                <input type="range" id="slider5" name="maxdistance" minlength="1" maxlength="10" value="0" max="25" min="0"
                    class="slider" mousemove="range(this.value)" onChange="range(this.value)">
                <div id="selector5">
                    <div id="SelectValue5"></div>
                </div>
            </div>
        </div>

        <label for="pets">Pets?</label>
        <input type="radio" id="yes" name="pets" value="Y">
        <label for="yes">Yes</label><br>
        <input type="radio" id="no" name="pets" value="N">
        <label for="no">No</label><br>

        <label for="smoker">Smoker?</label>
        <input type="radio" id="yes" name="smoker" value="Y">
        <label for="yes">Yes</label><br>
        <input type="radio" id="no" name="smoker" value="N">
        <label for="no">No</label><br>

        <label for="gender">Gender</label>
        <input type="radio" id="male" name="gender" value="M">
        <label for="male">Male</label><br>
        <input type="radio" id="female" name="gender" value="F">
        <label for="female">Female</label><br>
        <input type="radio" id="nonbin" name="gender" value="NB">
        <label for="female">Non-Binary</label><br>

        <select class="select" id="budget" name="budget">
            <option disabled selected>Select your Maximum Budget/month</option>
            <option value="250">$250</option>
            <option value="500">$500</option>
            <option value="750">$750</option>
            <option value="1000">$1000</option>
            <option value="1250">$1250</option>
            <option value="1500">$1500</option>
        </select>

        <button>Submit</button>
    </form>

    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/login">login</a></li>
        <li><a href="/logout">Logout</a></li>
    </ul>

    <script src="js/slider.js"></script>
</body>